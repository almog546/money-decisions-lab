generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  decisions Decision[]
}
model Decision {
  id          String   @id @default(cuid())
  title       String
  description String?
  amount       Float
  type        DecisionType
  confidence  confidenceLevel
  createdAt   DateTime @default(now())
  reviewAt DateTime?
  reviewOutcome outcomepurchase?
  reviewedAt DateTime?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}
enum DecisionType {
  Purchase
  Subscription
}
enum confidenceLevel {
  LOW
  MEDIUM
  HIGH
}
enum outcomepurchase {
 YES
  NO
  DONTMATTER
}
